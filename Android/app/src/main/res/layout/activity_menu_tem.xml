<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_layout_tem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_topbk"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <LinearLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/logoblack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/view1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/navi"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="50dp"
                        style="@style/homeCardImage"
                        android:maxHeight="110dp"
                        app:srcCompat="@drawable/map" />

                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:minHeight="100dp"
                        android:padding="10dp"

                        >


                        <TextView
                            android:id="@+id/navigation"
                            style="@style/HomeCardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="길찾기"
                            android:fontFamily="@font/dohyeon"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="28sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/characterR"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="50dp"
                        style="@style/homeCardImage"
                        android:maxHeight="110dp"
                        app:srcCompat="@drawable/textreg" />

                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="150dp"

                        android:minHeight="100dp"
                        android:padding="10dp"

                        >


                        <TextView
                            android:id="@+id/textRecog"
                            style="@style/HomeCardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="문자 인식"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="28sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/brightness"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="50dp"
                        style="@style/homeCardImage"
                        android:maxHeight="110dp"
                        app:srcCompat="@drawable/lightreg" />

                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:minHeight="100dp"
                        android:padding="10dp"

                        >


                        <TextView
                            android:id="@+id/brightnessBtn"
                            style="@style/HomeCardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="빛 밝기"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="28sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/object"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="50dp"
                        style="@style/homeCardImage"
                        android:maxHeight="110dp"
                        app:srcCompat="@drawable/objectreg"
                        />
                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:minHeight="100dp"
                        android:padding="10dp"
                        >

                        <TextView
                            android:id="@+id/objectRecog"
                            style="@style/HomeCardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="사물 인식"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="28sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/colorR"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="50dp"
                        style="@style/homeCardImage"
                        android:maxHeight="110dp"
                        app:srcCompat="@drawable/colorreg" />

                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:minHeight="100dp"
                        android:padding="10dp"

                        >

                        <TextView
                            android:id="@+id/colorRecog"
                            style="@style/HomeCardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="색상 인식"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="28sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingLayout"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="36dp"
                        style="@style/homeCardImage"

                        android:layout_width="150dp"
                        android:layout_height="150dp"


                        app:srcCompat="@drawable/setting" />

                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:minHeight="100dp"
                        android:padding="10dp"

                        >


                        <TextView
                            android:id="@+id/setting"
                            style="@style/HomeCardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="설정"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="28sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>